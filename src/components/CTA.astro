---
interface Props {
  heading?: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
}

const {
  heading = "Ontdek wat AI voor jouw bedrijf kan opleveren",
  description = "Plan een gesprek en ontdek direct waar de grootste kansen liggen voor jouw bedrijf.",
  buttonText = "Plan een gesprek",
  buttonHref = "/contact/",
} = Astro.props;
---

<section class="relative overflow-hidden border-t border-primary-100 bg-gradient-to-br from-primary-50 via-white to-primary-50 py-20 dark:border-primary-900 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <!-- Decorative elements -->
  <div class="pointer-events-none absolute inset-0" aria-hidden="true">
    <div class="absolute -left-24 -top-24 h-64 w-64 rounded-full bg-primary-200/40 blur-3xl dark:bg-primary-600/20"></div>
    <div class="absolute -bottom-20 -right-20 h-72 w-72 rounded-full bg-accent-400/20 blur-3xl dark:bg-accent-500/10"></div>
  </div>

  <div class="relative mx-auto max-w-5xl px-6 text-center">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white sm:text-3xl">
      {heading}
    </h2>
    <p class="mx-auto mt-4 max-w-xl text-gray-600 dark:text-gray-300">
      {description}
    </p>
    <a
      href={buttonHref}
      class="mt-8 inline-flex items-center justify-center rounded-lg bg-primary-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-primary-600/25 transition-all hover:-translate-y-0.5 hover:bg-primary-700 hover:shadow-xl hover:shadow-primary-600/30"
    >
      {buttonText}
      <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</section>
