---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
}

const { title, description, date, slug } = Astro.props;
const formattedDate = date.toLocaleDateString("nl-NL", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article
  class="rounded-xl border border-gray-200 bg-white p-6 transition-shadow hover:shadow-lg dark:border-gray-700 dark:bg-gray-800"
>
  <time class="text-sm text-gray-500 dark:text-gray-400">{formattedDate}</time>
  <h3 class="mt-2 text-lg font-semibold text-gray-900 dark:text-white">
    <a
      href={`/blog/${slug}/`}
      class="transition-colors hover:text-primary-600 dark:hover:text-primary-400"
    >
      {title}
    </a>
  </h3>
  <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">{description}</p>
  <a
    href={`/blog/${slug}/`}
    class="mt-4 inline-flex items-center text-sm font-medium text-primary-600 transition-colors hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
  >
    Lees meer &rarr;
  </a>
</article>
