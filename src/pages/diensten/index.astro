---
import Base from "../../layouts/Base.astro";
import CTA from "../../components/CTA.astro";

const services = [
  {
    title: "Workshops & trainingen",
    href: "/diensten/workshops/",
    description:
      "Interactieve sessies over AI in jouw sector. Je team leert mogelijkheden herkennen en direct toepassen in de dagelijkse praktijk.",
    details: [
      "Introductie AI voor teams",
      "Hands-on sessies met AI-tools",
      "Op maat voor jouw branche",
      "Van halfdag tot meerdaags traject",
    ],
    icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
  },
  {
    title: "Advies & implementatie",
    href: "/diensten/advies/",
    description:
      "Van idee naar actie. Praktisch en resultaatgericht advies over welke AI-toepassingen echt waarde opleveren voor jouw bedrijf.",
    details: [
      "Analyse van huidige werkprocessen",
      "Concrete aanbevelingen",
      "Begeleiding bij implementatie",
      "Resultaat meten en bijsturen",
    ],
    icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
  },
  {
    title: "Strategie & digitale transformatie",
    href: "/diensten/strategie/",
    description:
      "Een heldere scan van je organisatie, een concreet plan en begeleiding richting meer digitale slagkracht. Stap voor stap.",
    details: [
      "Digitale volwassenheidsscan",
      "Strategisch plan op maat",
      "Prioritering van initiatieven",
      "Langetermijnbegeleiding",
    ],
    icon: "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6",
  },
];
---

<Base
  title="Diensten"
  description="Workshops, advies en digitale transformatie voor MKB-bedrijven in de Bollenstreek."
>
  <section class="py-20">
    <div class="mx-auto max-w-5xl px-6">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">
        Diensten
      </h1>
      <p class="mt-4 max-w-2xl text-lg text-gray-600 dark:text-gray-300">
        Niet door meteen oplossingen te verkopen, maar door eerst te begrijpen
        hoe jouw bedrijf werkt. Op basis daarvan krijg je concrete kansen,
        logische vervolgstappen en duidelijke keuzes.
      </p>

      <div class="mt-16 space-y-16">
        {
          services.map((service) => (
            <div class="grid gap-8 md:grid-cols-5">
              <div class="md:col-span-3">
                <div class="flex items-center gap-4">
                  <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary-100 dark:bg-primary-900">
                    <svg
                      class="h-6 w-6 text-primary-600 dark:text-primary-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d={service.icon}
                      />
                    </svg>
                  </div>
                  <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                    {service.title}
                  </h2>
                </div>
                <p class="mt-4 text-gray-600 dark:text-gray-300">
                  {service.description}
                </p>
                <a
                  href={service.href}
                  class="mt-4 inline-flex items-center text-sm font-medium text-primary-600 transition-colors hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
                >
                  Meer informatie
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
              <div class="md:col-span-2">
                <ul class="space-y-3">
                  {service.details.map((detail) => (
                    <li class="flex items-start gap-3 text-sm text-gray-600 dark:text-gray-300">
                      <svg
                        class="mt-0.5 h-5 w-5 shrink-0 text-primary-600 dark:text-primary-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      {detail}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Veelvoorkomende problemen -->
  <section
    class="border-t border-gray-100 bg-gray-50 py-20 dark:border-gray-800 dark:bg-gray-900"
  >
    <div class="mx-auto max-w-5xl px-6">
      <h2
        class="text-center text-2xl font-bold text-gray-900 dark:text-white"
      >
        Veelvoorkomende problemen die wij helpen oplossen
      </h2>
      <div class="mt-12 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {
          [
            "Steeds dezelfde vragen beantwoorden",
            "Onnodig handwerk in administratie",
            "Klantinformatie die verspreid staat",
            "Teams die langs elkaar heen werken",
            "Oplossingen die niet met elkaar praten",
            "Processen die te lang duren",
          ].map((problem) => (
            <div class="flex items-start gap-3 rounded-lg border border-gray-200 bg-white p-4 dark:border-gray-700 dark:bg-gray-800">
              <svg
                class="mt-0.5 h-5 w-5 shrink-0 text-accent-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"
                />
              </svg>
              <span class="text-sm text-gray-700 dark:text-gray-300">
                {problem}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <CTA />
</Base>
