---
import Base from "../../layouts/Base.astro";
import BlogCard from "../../components/BlogCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Base
  title="Blog"
  description="Artikelen over AI en digitale transformatie voor MKB-bedrijven in de Bollenstreek."
>
  <section class="py-20">
    <div class="mx-auto max-w-5xl px-6">
      <h1
        class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        Blog
      </h1>
      <p class="mt-4 max-w-2xl text-lg text-gray-600 dark:text-gray-300">
        Praktische inzichten over AI en digitale transformatie voor ondernemers
        in de Bollenstreek.
      </p>

      <div class="mt-12 grid gap-8 sm:grid-cols-2">
        {
          posts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              slug={post.id}
            />
          ))
        }
      </div>
    </div>
  </section>
</Base>
