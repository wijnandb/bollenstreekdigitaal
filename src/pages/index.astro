    "@type": "PostalAddress",
    streetAddress: "Gooweg 14",
    addressLocality: "Noordwijk",
    postalCode: "2203 AB",
    addressRegion: "Zuid-Holland",
    addressCountry: "NL",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 52.2361,
    longitude: 4.4414,
